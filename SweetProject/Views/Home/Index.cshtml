    function showNext() {
        if (current < paragraphs.length) {
            const para = paragraphs[current];
            const isSimpleText = para.children.length === 0;

            if (isSimpleText) {
                const text = para.innerText;
                typeParagraph(para, text, 0, () => {
                    current++;
                    if (current === paragraphs.length) {
                        document.getElementById('nextBtn').style.display = 'none';
                    }
                });
            } else {
                // If there's a <p> inside with text only, animate that
                const firstTextPara = para.querySelector('p');
                if (firstTextPara && firstTextPara.children.length === 0) {
                    para.style.display = 'block'; // show wrapper first
                    const text = firstTextPara.innerText;
                    firstTextPara.innerText = ''; // clear for typing
                    typeParagraph(firstTextPara, text, 0, () => {
                        // Done typing, show rest of the children
                        const children = para.children;
                        for (let i = 0; i < children.length; i++) { 
                            if (children[i] !== firstTextPara) {
                                children[i].style.display = 'block';
                            }
                        }
                        current++;
                        //current-2;
                        //console.log(current);
                        if (current === paragraphs.length) {
                            document.getElementById('nextBtn').style.display = 'none';
                        }
                    });
                } else {
                    // fallback: show all
                    para.style.display = 'block';
                    current++;
                    if (current === paragraphs.length) {
                        document.getElementById('nextBtn').style.display = 'none';
                    }
                }
            }
        }
    }



