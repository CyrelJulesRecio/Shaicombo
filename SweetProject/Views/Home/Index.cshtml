    function typeParagraph(paragraphEl, text, index = 0, callback = null) {
        const nextBtn = document.getElementById("nextBtn");
        nextBtn.style.display = "none"; 

        paragraphEl.innerHTML = "";
        paragraphEl.style.display = 'block';

        function type() {
            if (index < text.length) {
                paragraphEl.innerHTML += text.charAt(index);
                index++;
                setTimeout(type, 0);
            } else {
                // Show the button again after typing is done
                nextBtn.style.display = "inline-block";

                // Smooth scroll the button into view
                setTimeout(() => {
                    nextBtn.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100); // slight delay ensures visibility

                if (callback) callback();
            }
        }

        type();
    }
